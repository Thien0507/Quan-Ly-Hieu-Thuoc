<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>Đăng nhập</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <style>
      .login-form {
        width: 340px;
        margin: 50px auto;
        font-size: 15px;
      }
      .login-form form {
        margin-bottom: 15px;
        background: #f7f7f7;
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
        padding: 30px;
      }
      .login-form h2 {
        margin: 0 0 15px;
      }
      .form-control,
      .btn {
        min-height: 38px;
        border-radius: 2px;
      }
      .btn {
        font-size: 15px;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <div class="login-form">
      <form action="/examples/actions/confirmation.php" method="post">
        <h2 class="text-center">Đăng Nhập</h2>
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            placeholder="Username"
            required="required"
          />
        </div>
        <div class="form-group">
          <input type="password" class="form-control" placeholder="Password""
          autocomplete="on" required="required" />
        </div>
        <div class="form-group">
          <button type="button" class="btn btn-primary btn-block">
            Log in
          </button>
        </div>
      </form>
    </div>
  </body>
  <script>
    const formGroupElement = document.getElementsByClassName("form-group");
    const userNameInput = formGroupElement[0].children[0];
    const passwordInput = formGroupElement[1].children[0];
    const button = formGroupElement[2].children[0];

    let result;

    (async () => {
      let response = await fetch("http://localhost:3000/loginpage/role", {
        method: "GET",
        headers: {
          accept: "application/json",
        },
      });

      let data = await response.json();
      result = data.result;
      if (result != "Logout" && result) {
        console.log(result);
        alert("Your are login");
        window.location = "http://localhost:3000/homepage";
      }
    })();

    button.addEventListener("click", async () => {
      let response = await fetch(
        `http://localhost:3000/userspage/users/login/${userNameInput.value.trim()}`
      );

      let data = await response.json();
      let { result } = data;

      if (result.length == 0) {
        alert("Login failed: username or password incorrect");
        return;
      }
      if (
        result[0].TaiKhoan === userNameInput.value.trim() &&
        result[0].MatKhau === passwordInput.value.trim()
      ) {
        console.log("Login successful");
        await fetch(`http://localhost:3000/loginpage/login`, {
          method: "POST",
          body: JSON.stringify({
            username: result[0].TaiKhoan,
          }),
          headers: {
            Accept: "application/json",
            "Content-Type": "application/json",
          },
        });
        window.location = "http://localhost:3000/homepage";
      }
    });
  </script>
</html>
